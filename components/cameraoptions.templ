package components

templ OverallCameraComponent(s *ScrcpyInfo) {
  <div class="m-4 p-4 ">
  <p> { s.DeviceName }</p>
  <ol type="a">
  for _, v := range s.Cameras {
    <li>{ v.ID }</li>
    <li>{ v.Position }</li>
    @SelectComponent(v.Sizes)
    }
  </ol>
  </div>
}

templ SelectComponent(size []SizeConfig) {
  <select class="select">
  <option disabled selected>Pick a resolution</option>
  for _, v := range size {
    <option>{ v.Resolution }</option>
    }
  </select>
}
